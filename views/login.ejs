<% include ./partials/header.ejs %>
<title>GradBunker - Login</title>
<% include ./partials/navbar.ejs %>
<style>
  .highlight:hover{
   color:blue;
}
</style>
<div class="row">
    <div class="col s12 m10 offset-m1 l4 offset-l4">
      <div class="card-panel">
        <h4 class="center">Login</h4>
        <div class="row">
    <form class="col s12" action="/login" method="POST" id="LoginForm">
      <div class="row">
      <div class="input-field col s12">
        <input id="email" name="email" type="email" class="validate">
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="password" name="password" type="password" class="validate">
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          <button class="btn waves-effect waves-light right" style="width:100%" type="submit" name="action">Login
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <a href="/forgotPassword" class="highlight">Forgot Password?</a>
        </div>
      </div>
    </form>
  </div>
      </div>
    </div>
</div>


