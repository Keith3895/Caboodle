<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<% include ./sidenav.ejs %>
<div class="row">
    <table class="highlight centered">
        <thead>
          <tr>
              <th>Item </th>
              <th>Date Lost</th>
              <th>Verified?</th>
              <th></th>
          </tr>
        </thead>

        <tbody>
        <% lostItems.forEach(function(lost){ %>

             <tr>
            <td><%= lost.itemName %></td>
            <td><%= lost.lostDate %></td>
            <% if(lost.verified==true){ %>
            <td>Verified & listed</td>
            <% } else { %>
            <td>Not Verified</td>
            <% } %>
            <td style="padding: 0px"> 
                <i class="material-icons delete">delete</i> 
                <i class="material-icons edit">mode_edit</i>
            </td>
          </tr>
         
        <% }); %>
        </tbody>
    </table>    
</div>
<% include ../partials/footer.ejs %>