<script>
	 $(document).ready(function(){
      $('.parallax').parallax();
      $('#usn-input').on('keyup change',function(){
      	
      	if(/^[1-4][a-zA-Z]{2}[0-9]{2}[a-zA-Z]{2}[0-9]{3}$/.test($(this).val())){
      		$(this).addClass('valid');
      		$(this).removeClass('invalid');
      	}else{
      		$(this).removeClass('valid');
      		$(this).addClass('invalid');
      	}
      });
    });
    
</script>






