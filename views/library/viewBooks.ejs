<style>
    .side-nav{
        top: 65px;
        width: 250px;
        background-color:#2f2f2f;
            color: white;
    }
    .side-nav li>a>i, .side-nav li>a>[class^="mdi-"], .side-nav li>a li>a>[class*="mdi-"], .side-nav li>a>i.material-icons{
      color: white;
    }
    .side-nav li>a{
        background-color:#2f2f2f;
            color: white;
    }
</style>
	<ul id="slide-out" class="side-nav fixed collapsible" data-collapsible="accordion">
      	<li class="logo">
      		<a id="logo-container" href="/library" class="brand-logo">
      		Library
            </a>
        </li>
        <li><a href="/library/addBook">Add Book</a></li>
        <li><a href="/library/viewBooks">View Books</a></li>
    </ul>
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
    
   <div class="row">
                        <table class="highlight centered">
                            <thead>
                              <tr>
                                  <th>Name</th>
                                  <th>Author</th>
                                  <th>ISBN</th>
                                  <th>Number</th>
                                  <th></th>
                              </tr>
                            </thead>
                    
                            <tbody>
        <% books.forEach(function(book){ %>
         
                                 <tr>
                                <td><%= book.title %></td>
                                <td><%= book.author %></td>
                                <td><%= book.codes[0].isbn%></td>
                                <td><%= book.codes.length %></td>
                                <td style="padding: 0px"> 
                                    <i class="material-icons delete">delete</i> 
                                    <i class="material-icons edit">mode_edit</i>
                                </td>
                              </tr>
                             
                    <% }); %>
     </tbody>
                        </table>    
                    </div>
