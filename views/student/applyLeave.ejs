<% include ../partials/navbar.ejs %>
<% include ./sidenav.ejs %>
    <div class="row">
        <div class="col s12 m10 l10">
            <div class="card-panel row">
                <h4 class="center">Apply for Leave</h4>
                <form action="/student/applyLeave" method="POST" enctype="multipart/form-data">
                    <div class="input-field col s12">
                        <input name="subject" id="subject" type="text" class="validate">
                        <label for="subject">Subject for Leave application</label>
                    </div>
                    <div class="input-field col s12">
                        <textarea id="letterBody" name="letterBody" class="materialize-textarea"></textarea>
                        <label for="letterBody">Body of the Letter</label>
                    </div>
                    
                    <div class="input-field col s12" id="image_preview">
                        <div class="file-field input-field">
                          <div class="btn">
                            <span>Browse</span>
                            <input type="file" name="images[]" id="images[]" multiple onchange="preview_image();">
                          </div>
                          <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Upload proofs(if any)">
                          </div>
                        </div>
                    </div>
                    <div class="input-field col s12" >
                        
                    </div>
                    
                    <button class="btn waves-effect waves-light right blue" type="submit" name="action">Add
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
        </div>
    </div>
<script>
    function preview_image() 
    {
        $('#image_preview img').empty();
        var total_file=document.getElementById("images").files.length;
        for(var i=0;i<total_file;i++)
        {
            $('#image_preview').append("<img src='"+URL.createObjectURL(event.target.files[i])+"'>");
        }
    }
</script>
