    <script>

    var has = function(container, value) {
                	var returnValue = false;
                	var pos = container.indexOf(value);
                	if (pos >= 0) {
                		returnValue = true;
                	}
                	return returnValue;
                };
    $.ajax({
        method: "GET",
        url: "/placementHead/placementStats",
        // data: Score,
        success: function(data){
            
            lineGraph(data['1']);
            BarGraph(data['2']);
            
            Radar(data['3']);
            
        }
    });
    
    
    
    
    
    
    function lineGraph(data){
        var dataset= [];
            var companies=[];
            for(i in data){
                dataset.push({
                    label: ""+i,
                    backgroundColor: 'rgba('+Math.floor(Math.random() * 253)+', 99, 132, 0.0)',
                    borderColor: 'rgba('+Math.floor(Math.random() * 253)+','+Math.floor(Math.random() * 253)+', '+Math.floor(Math.random() * 253)+',0.6)',
                    data: data[''+i],
                });    

                for(j=0;j<data[''+i].length;j++){
                    if(!has(companies,data[''+i][j].Cname))
                        companies.push(data[''+i][j].Cname);
                }
                
            }
          var lineVar = document.getElementById('lineCanvas').getContext('2d');
        	var lineData={
        		labels: companies,
                datasets: dataset
        	};
        	var options ={
                                scaleShowGridLines: false,
                                showScale: false,
                                responsive: false,
            					maintainAspectRatio: false,
                                barShowStroke: false,
                                scales: {
        						        yAxes: [{
        						            ticks: {
        						                beginAtZero: true
        						            }
        						        }],
        						        xAxes: [{
        						            ticks: {
        						                beginAtZero: true
        						            }
        						        }]
        						    }
                            };
        
        	var myLineChart = new Chart(lineVar, {
            type: 'line',
            data: lineData,
            options: options
        });
            
    }
    
    function BarGraph(data){
      
        var BarVar = document.getElementById('BarCanvas').getContext('2d');
        console.log(BarVar);
	        var BarChart = new Chart(BarVar, {
        	  type: 'bar',
        	  data: {
        	    datasets: [{
        	          label: 'Bar Dataset',
        	          data: [data.placedCount,data.UnplacedCount],
        	          backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                    ]
        	        }],
        	    labels: ['Placed', 'Un-Placed']
        	  },
        	  options: {
        	    responsive:false,
        	    
        	  	xAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }],
        	  	yAxes: [{
                        // stacked: true,
                        display: true,
                        ticks: {
                            beginAtZero: true
                        }
                    }],
                legend: {
                    display: true,
                    labels: {
                        fontColor: 'rgb(255, 99, 132)'
                    }
                }
        	  }
        	});
    }
    function Radar(data){
        console.log(data);
        var placedStdDept=[],unplaced=[],department=[];
            for(i in data.count ){
                if(data.placed)
                placedStdDept.push(data.placed[i]);
                if(data.count)
                unplaced.push(data.count[i]);
                    department.push(''+i);
                
                    
            }
            console.log(department);
            var RadarVar = document.getElementById('radarCanvas').getContext('2d');
        	var myRadarChart = new Chart(RadarVar, {
        	    type: 'radar',
        	    data: {
        	    datasets: [{
                        label: 'Placed Department wise',
        	          	data: placedStdDept,
                        backgroundColor: 'rgba(255, 99, 132,.2)',
                        borderColor: 'rgb(255, 99, 132)',
                        pointBackgroundColor: 'rgb(255, 99, 132)',
                        
                        
                    },
                    {
                        label: "Unplaced Student",
                        data: unplaced,
                        backgroundColor: 'rgba(54, 162, 235,.2)',
                        borderColor: 'rgb(54, 162, 235)',
                        pointBackgroundColor: 'rgb(54, 162, 235)'
                    },
                    {
                        label: "",
                        data: [0],
                        backgroundColor: 'rgba(54, 162, 235,0)',
                        borderColor: 'rgba(54, 162, 235,0)',
                        pointBackgroundColor: 'rgba(54, 162, 235,0)'
                    }
                    ],
        	    labels: department
        	  	},
        	    options: {
        	          responsive:false,
                    scaleOverlay : false,
                    scaleOverride : true,
                    scaleSteps : 5,
                    scaleStepWidth : 2,
                    scaleStartValue : 0
        	    }
        	});
    }
        
</script>
    
